{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Ensure Node.js-style resolution
    "types": ["node", "express"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}